{
    "compileOnSave": false,
    "compilerOptions": {
      "outDir": "./dist/out-tsc",
      "sourceMap": true,
      "declaration": false,
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es6",
      "module": "es2015",
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es5",
        "es2015",
        "es2016",
        "es2017",
        "dom",
        "scripthost"
      ]
    },
    "include": [
      "src/**/*", 
      "node_modules/@matrix/common/**/*.ts",
      "node_modules/@matrix/presentation/**/*.ts",
      "node_modules/@matrixwriter/core/**/*.ts",
      "node_modules/@matrixwriter/framework/**/*.ts"
    ]
  }
  